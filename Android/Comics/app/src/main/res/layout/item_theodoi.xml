<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <ImageView
                android:layout_margin="5dp"
                android:id="@+id/imgTruyen"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <RelativeLayout
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/imgTruyen"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/tvTenTruyen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ten tryen"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/tvNgayTheoDoi"
                        android:layout_below="@id/tvTenTruyen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20/12/2021"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/tvTacGia"
                        android:layout_below="@id/tvNgayTheoDoi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tac Gia"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />
                </RelativeLayout>

                <CheckBox
                    android:id="@+id/checkbox"
                    android:button="@null"

                    android:background="@drawable/ic_like"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            </RelativeLayout>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>